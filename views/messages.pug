extends layout
block head
  title= title

block content
  h1= title

  a(href="/messages/create-message") Create Message

  ul
    each message in messages
      li
        a(href=`/messages/${message._id}`) 
          h2= message.title
        p= message.text
        p Create Time: #{message.date}

        a(href=`users/${message.user._id}`) Created by #{message.user.username}
  
  i Date Format: dd-MM-yyyy HH:mm